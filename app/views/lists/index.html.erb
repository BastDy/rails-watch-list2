<div class="banner d-flex align-items-center justify-content-center ">
  <h1>Sauvegarder tous vos films</h1>
</div>

<div class="container my-3">
  <div class="container d-flex justify-content-between py-3">
      <h2>Mes listes</h2>
      <%= link_to "Nouvelle liste", new_list_path, class: "btn btn-success" %>
    </div>
  <div class="container py-3 text-center row">
    <% @lists.each do |list| %>
      <div class="col">
        <%= link_to list_path(list) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  </div>
</div>
